{
  "name": "site-spy-monitor",
  "version": "1.0.2",
  "author": "Vitaly Kuprin",
  "description": "Track and monitor website changes with this web extension",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/vkuprin/website-change-tracker"
  },
  "scripts": {
    "build": "tsc --noEmit && vite build",
    "build:firefox": "tsc --noEmit && cross-env __FIREFOX__=true vite build",
    "build:watch": "cross-env __DEV__=true vite build -w --mode development",
    "build:firefox:watch": "cross-env __DEV__=true __FIREFOX__=true vite build -w --mode development",
    "build:hmr": "rollup --config utils/reload/rollup.config.ts",
    "wss": "node utils/reload/initReloadServer.js",
    "dev": "pnpm build:hmr && (run-p wss build:watch)",
    "dev:firefox": "pnpm build:hmr && (run-p wss build:firefox:watch)",
    "test": "jest",
    "test:site": "nodemon test/test-site/index.test.cjs",
    "commitlint": "commitlint --edit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "pnpm lint -- --fix",
    "prettier": "prettier . --write",
    "zip": "zip -r dist/vee-tracker.zip dist"
  },
  "type": "module",
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.11.3",
    "construct-style-sheets-polyfill": "^3.1.0",
    "diff": "^5.1.0",
    "html-differ": "^1.4.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@rollup/plugin-typescript": "^8.5.0",
    "@testing-library/react": "14.0.0",
    "@twind/core": "^1.1.3",
    "@twind/preset-autoprefix": "^1.0.7",
    "@twind/preset-tailwind": "^1.1.4",
    "@types/chrome": "0.0.224",
    "@types/diff": "^5.0.8",
    "@types/jest": "29.5.6",
    "@types/node": "20.8.9",
    "@types/react": "18.2.29",
    "@types/react-dom": "18.2.14",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "2.2.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "fs-extra": "11.1.1",
    "husky": "^8.0.3",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "rollup": "2.79.1",
    "sass": "1.62.1",
    "ts-jest": "29.0.2",
    "ts-loader": "9.4.2",
    "tslib": "^2.6.2",
    "typescript": "4.9.5",
    "vite": "3.2.7",
    "ws": "8.13.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "pnpm@8.9.2"
}
